<!--pages/home/index.wxml-->

<view>
    <view class="theRow">
        <van-row>
            <van-col span="4" >
                <van-image width="40px" height="40px" fit="cover" image-class="userImg" src="https://img.yzcdn.cn/vant/cat.jpeg" />
            </van-col>
            <van-col span="20">
                <van-tabs active="{{ active }}" bind:change="onChange">
                    <van-tab title="Do"></van-tab>
                    <van-tab title="Don't"></van-tab>
                </van-tabs>
            </van-col>
        </van-row>
    </view>
</view>

<view class="list">
    <van-swipe-cell right-width="{{ 65 }}">
        <van-cell-group inset>
            <van-cell  clickable bindtap="edit" size="large" icon="like-o">
                <view slot="title">
                    <view class="van-cell-text">任务1
                        <van-icon name="star-o" info="11" size="25px" class="fitIcon" />
                    </view>
                </view>
            </van-cell>
        </van-cell-group>
        <view slot="right" class="right"> 删除</view>
    </van-swipe-cell>
    <van-swipe-cell right-width="{{ 65 }}">
        <van-cell-group inset>
            <van-cell clickable bindtap="edit"  size="large" icon="like-o">
                <view slot="title">
                    <view class="van-cell-text">任务2
                        <van-icon name="star-o" info="5" size="25px" class="fitIcon" />
                    </view>
                </view>
            </van-cell>
        </van-cell-group>
        <view slot="right" class="right"> 删除</view>
    </van-swipe-cell>
    <van-swipe-cell right-width="{{ 65 }}">
        <van-cell-group inset>
            <van-cell clickable bindtap="edit" size="large" icon="fire-o">
                <view slot="title">
                    <view class="van-cell-text">任务3
                        <van-icon name="star-o" info="21" size="25px" class="fitIcon" />
                    </view>
                </view>
            </van-cell>
        </van-cell-group>
        <view slot="right" class="right"> 删除</view>
    </van-swipe-cell>
</view>
<view class="footer">
    <view class="add" bindtap="addMission">
        <image class="add-image" src="../../images/footer/add.png" />
    </view>
</view>
<van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="todo-list-o">Doing</van-tabbar-item>
    <van-tabbar-item icon="completed">Done</van-tabbar-item>

</van-tabbar>